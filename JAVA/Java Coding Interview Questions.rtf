public class Main \{\
    public static void main(String[] args) \{\
        String sentence = "Hello This is worl JAVA";\
        \
        String ReversedSentence = reversed(sentence);\
        \
        System.out.println("Reversed String: " + ReversedSentence);\
    \}\
    \
    public static String reversed(String sentence)\{\
        \
        String[] words = sentence.split("");\
        \
        String reversed = "";\
        for (int i = words.length - 1; i>=0; i--)\{\
          reversed+=words[i];\
          if (i!=0)\{\
            reversed+="";\
          \}\
        \}\
        return reversed;\
    \}\
\}\
